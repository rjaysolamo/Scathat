{
  "manifest_version": 3,
  "name": "Scathat",
  "version": "1.0.0",
  "description": "AI-powered real-time smart contract analysis and security protection",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "webNavigation",
    "notifications",
    "webRequest"
  ],
  "externally_connectable": {
    "matches": [
      "https://scathat.vercel.app/*",
      "http://localhost:3000/*",
      "http://localhost/*"
    ],
    "ids": ["*"]
  },
  "host_permissions": [
    "*://*/*",
    "<all_urls>",
    "about:blank"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["src/content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Scathat Security",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "src/inject/*"],
      "matches": ["*://*/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}

