{
  "manifest_version": 3,
  "name": "Scathat - Smart Contract Security",
  "version": "1.0.0",
  "description": "AI-powered smart contract security analysis right in your browser",
  "permissions": ["activeTab", "scripting", "storage", "webRequest"],
  "host_permissions": [
    "https://etherscan.io/*",
    "https://polygonscan.com/*",
    "https://bscscan.com/*",
    "https://snowtrace.io/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Scathat",
    "default_icons": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://etherscan.io/*",
        "https://polygonscan.com/*",
        "https://bscscan.com/*",
        "https://snowtrace.io/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
